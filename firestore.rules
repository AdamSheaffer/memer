service cloud.firestore {
  match /databases/{database}/documents {
    function getRole(role) {
    	return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles[role] == true;
    }
  
    match /captions/{caption} {
    	allow read;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles['editor'] == true;
    }
  
  	match /games/{document=**} {
    	allow read;
    	allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles['player'] == true;
    }
    
    match /users/{document} {
      allow read;
      allow create: if request.resource.data.roles.keys().hasAny(['admin', 'editor']) == false;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles['admin'] == true;
    }

    match /categories/{category} {
      allow read;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles['admin'] == true;
    }
  }
}